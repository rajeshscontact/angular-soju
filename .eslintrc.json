{
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			4
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-trailing-spaces": [
			"error", {
				"skipBlankLines": true
			}
		],
		"one-var": "off",
		"padded-blocks": "off",
		"func-names": "off",
		"no-console": "off",
		"no-unused-vars": "warn",
		"no-inner-declarations": "warn"
	},
	"globals": {
		"angular": true,
		"Chart": true
	}
}